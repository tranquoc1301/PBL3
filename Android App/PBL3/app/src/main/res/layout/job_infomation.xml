<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="15dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_btn_custom">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/recycle_bin"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            />



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/custom_white_background_conner">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/company_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/topdev_logo"
                android:background="@color/white"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/company_logo"
                android:text="topdev"
                android:textSize="20sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/job_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Head of Devolopment, IT Department, head Office"
            android:textSize="22sp"
            android:textColor="@color/teal_200"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/job_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quận Bình Thạnh, Hồ Chí Minh"
                android:textSize="18sp"
                android:layout_toEndOf="@id/location_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/money_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/money_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/salary_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Negotiable"
                android:textSize="18sp"
                android:layout_toEndOf="@id/money_icon"
                android:layout_marginStart="10dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/clock_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/clock_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/time_upload_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 hour"
                android:textSize="18sp"
                android:layout_toEndOf="@id/clock_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>

    </LinearLayout>




</FrameLayout>